{
  "name": "livefromquarantine.club",
  "description": "livefromquarantine.club songs",
  "version": "1.0.0",
  "author": "Luke Karrys <luke@lukekarrys.com>",
  "bugs": {
    "url": "https://github.com/lukekarrys/livefromquarantine.club/issues"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "iso8601-duration": "^1.2.0",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "public/*"
  ],
  "homepage": "https://github.com/lukekarrys/livefromquarantine.club#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [],
  "license": "ISC",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukekarrys/livefromquarantine.club.git"
  },
  "scripts": {
    "build": "run-s build:client build:data",
    "build:client": "cd client && npm run build",
    "build:data": "node api/build.js",
    "data": "node data/index.js",
    "dev": "run-p dev:**",
    "dev:client": "cd client && npm run dev",
    "dev:data": "NODE_ENV=development node api/dev-server.js",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-pattern '/client/' --fix",
    "lint": "npm run prettier && npm run eslint && cd client && npm run lint",
    "postinstall": "if [ ! -d \"client/node_modules\" ]; then cd client && npm install; fi;",
    "prettier": "prettier --write '!client' '**/*.{js,jsx,ts,tsx,css,md,json}'",
    "start": "npm run dev",
    "trigger": "node data/trigger.js"
  }
}
