{
  "name": "livefromquarantine.club",
  "description": "livefromquarantine.club songs",
  "version": "1.0.0",
  "author": "Luke Karrys <luke@lukekarrys.com>",
  "bugs": {
    "url": "https://github.com/lukekarrys/livefromquarantine.club/issues"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "homepage": "https://github.com/lukekarrys/livefromquarantine.club#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukekarrys/livefromquarantine.club.git"
  },
  "scripts": {
    "build": "run-s build:client build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "check": "run-s check:client check:server",
    "check:client": "cd client && npm run check",
    "check:server": "cd server && npm run check",
    "cleanup": "run-s cleanup:client cleanup:server",
    "cleanup:client": "cd client && npm run cleanup",
    "cleanup:server": "cd server && npm run cleanup",
    "data": "cd server && npm run data",
    "data:fixtures": "cd server && npm run data:fixtures",
    "dev": "run-p dev:**",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "lint": "run-s lint:**",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "postinstall": "run-s install:**",
    "precommit": "npm-run-all precommit:*",
    "precommit:client": "cd client && npm run precommit",
    "precommit:server": "cd server && npm run precommit",
    "test": "run-s test:**",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "trigger": "cd server && node api/trigger-gh-preload.js"
  }
}
