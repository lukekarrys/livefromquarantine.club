{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./api/**/*.ts",
    "./functions/**/*.ts",
    "./test/**/*.ts",
    "./*.ts"
  ]
}
