{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./api/**/*.ts",
    "./functions/**/*.ts",
    "./test/**/*.ts",
    "./*.ts"
  ]
}
