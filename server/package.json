{
  "name": "server",
  "version": "1.0.0",
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "eval": "^0.1.4",
    "iso8601-duration": "^1.2.0",
    "klaw-sync": "^6.0.0",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "lint-staged": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,md,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "scripts": {
    "data": "node api/preload-data.js",
    "dev": "NODE_ENV=development node api/dev-server.js",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'  --fix",
    "lint": "npm run prettier && npm run eslint",
    "precommit": "lint-staged",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json}'",
    "trigger": "node api/trigger-gh-preload.js"
  }
}
