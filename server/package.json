{
  "name": "server",
  "version": "1.0.0",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "detect-ts-node": "^1.0.5",
    "dotenv": "^8.2.0",
    "iso8601-duration": "^1.3.0",
    "mediaserver": "^0.1.1",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.32",
    "@types/prettier": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "ava": "^3.15.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "if-env": "^1.0.4",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "nodemon --exec 'npm run build && node api/dev-server.js' --ext ts",
    "check": "tsc --project tsconfig.json --noEmit",
    "cleanup": "if-env CI && rm -rf {api,fixtures,functions,}/**/*.ts || 'only cleanup server on CI'",
    "data": "ts-node api/preload-data.ts && ts-node build.ts",
    "data:fixtures": "ts-node fixtures/write.ts",
    "dev": "nodemon --exec 'NODE_ENV=development ts-node api/dev-server.ts' --ext js,json",
    "eslint": "eslint '**/*.{js,ts}'  --fix",
    "lint": "npm run prettier && npm run eslint",
    "precommit": "lint-staged",
    "prettier": "prettier --write '**/*.{js,ts,css,md,json}'",
    "test": "ava",
    "trigger": "ts-node api/trigger-gh-preload.ts"
  }
}
