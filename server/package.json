{
  "name": "server",
  "version": "1.0.0",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "iso8601-duration": "^1.3.0",
    "mediaserver": "^0.1.1",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.31",
    "@types/prettier": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "ava": "^3.15.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,md,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "scripts": {
    "build": "ts-node build.ts",
    "check": "tsc --project tsconfig.json --noEmit",
    "data": "ts-node api/preload-data.ts",
    "data:fixtures": "ts-node test/write-fixtures.ts",
    "dev": "nodemon --exec 'NODE_ENV=development ts-node api/dev-server.ts' --ext js,json",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'  --fix",
    "lint": "npm run prettier && npm run eslint",
    "precommit": "lint-staged && npm test",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json}'",
    "test": "ava test/test.ts",
    "trigger": "ts-node api/trigger-gh-preload.ts"
  }
}
