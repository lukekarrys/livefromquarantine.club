// see https://github.com/typescript-eslint/typescript-eslint/issues/890
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "./*.js",
    "./*.ts"
  ]
}
