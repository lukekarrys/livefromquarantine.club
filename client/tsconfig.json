{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2017", "dom.iterable"],
    "downlevelIteration": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
