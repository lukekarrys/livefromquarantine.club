{
  "name": "client",
  "version": "0.0.0",
  "dependencies": {
    "@types/classnames": "^2.2.11",
    "@types/youtube": "0.0.41",
    "@xstate/fsm": "^1.6.0",
    "@xstate/react": "^1.2.2",
    "classnames": "^2.2.6",
    "preact": "^10.5.12",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/preact": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.4",
    "preact-cli": "^3.0.5",
    "prettier": "^2.0.5",
    "sirv-cli": "^1.0.0-next.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,md,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "scripts": {
    "build": "preact build --sw false --no-prerender --inline-css false --esm false --preload --dest ../public",
    "check": "tsc --project tsconfig.json --noEmit",
    "dev": "preact watch",
    "eslint": "eslint './**/*.{js,jsx,ts,tsx}' --fix",
    "lint": "npm run prettier && npm run eslint",
    "precommit": "lint-staged",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,css,md,json}' --write",
    "serve": "sirv build --port 3000 --cors --single",
    "test": "jest ./tests"
  }
}
